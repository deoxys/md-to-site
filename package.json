{
  "name": "@deoxys-1/md-to-site",
  "version": "1.8.0",
  "description": "Create a static HTML website from a folder containing markdown files.",
  "license": "MIT",
  "author": "Giovan Angela <deoxys@github.com>",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\"",
    "watch": "sass ./assets/layouts/default/style.scss ./assets/layouts/default/dist/css/style.css --watch --style=compressed",
    "compile": "sass ./assets/layouts/default/style.scss ./assets/css/style.css --style=compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielefavi/md-to-site.git"
  },
  "homepage": "https://github.com/danielefavi/md-to-site#readme",
  "keywords": [
    "markdown",
    "markup",
    "md",
    "html",
    "static",
    "site",
    "directory",
    "folder"
  ],
  "bin": {
    "md-to-site": "cli.js"
  },
  "dependencies": {
    "marked": "^4.1.1",
    "node-sass": "npm:sass@^1.55.0",
    "striptags": "^3.1.1",
    "yargs": "^17.6.0"
  }
}
